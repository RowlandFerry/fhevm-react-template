{
  "name": "fhevm-sdk-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs-app && npm run dev",
    "dev:sdk": "cd packages/fhevm-sdk && npm run dev",
    "install:all": "npm install && npm run install:packages && npm run install:examples",
    "install:packages": "cd packages/fhevm-sdk && npm install",
    "install:examples": "cd examples/nextjs-app && npm install && cd ../food-safety-reporter && npm install",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist",
    "deploy:example": "cd examples/food-safety-reporter && npm run deploy:sepolia"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "zama",
    "privacy",
    "blockchain",
    "sdk",
    "confidential-computing",
    "react",
    "nextjs",
    "vue",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fhevm-sdk"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
